{
    "name": "balise/anchor",
    "description": "A Wordpress Boilerplate",
    "type": "project",
    "require": {
        "windwalker/renderer": "~3.0",
        "illuminate/view" : "4.*"
    },
    "scripts": {
        "post-root-package-install": [
            "npm install",
            "mkdir public/views",
            "mkdir app/content/fields",
            "mkdir app/content/navigation",
            "mkdir app/content/post-type",
            "mkdir app/content/taxonomy",
            "mkdir app/js",
            "mkdir app/views",
            "mkdir app/includes",
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "prefer-lowest": false,
    "license": "MIT",
    "homepage": "https://balise.ca"
}
